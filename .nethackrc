# setup some nice colors etc
OPTIONS=boulder:0, color, DECgraphics, time

# allow using right click to look at things
OPTIONS=clicklook

# enable extended META commands
OPTIONS=altmeta

# visually highlight stuff
OPTIONS=hilite_pile, hilite_pet

# highlight stats
OPTIONS=hilite_status:characteristics/<5/red/>6/orange/>8/brown/>11/yellow/>13/green/>16/cyan/>18/lightblue

# highlight hitpoints
OPTIONS=hilite_status:hitpoints/100%/brightgreen/<100%/green/<60%/yellow/<40%/red

# Hilight multiple encumbrance statuses.
OPTIONS=hilite_status:carrying-capacity/burdened/yellow/stressed/orange

OPTIONS=statushilites:10 # highlight status changes for 10 turns 

# setup sensible autopickup
OPTIONS=autopickup, pickup_burden:unencumbered, pickup_types:$?!/="+%

# Always pick these:
AUTOPICKUP_EXCEPTION="<magic lamp"
AUTOPICKUP_EXCEPTION="<wand of wishing"
AUTOPICKUP_EXCEPTION="<wand of death"
AUTOPICKUP_EXCEPTION="<wand of polymorph"
AUTOPICKUP_EXCEPTION="<lichen corpse" 
AUTOPICKUP_EXCEPTION="<lizard corpse" 
AUTOPICKUP_EXCEPTION="<newt corpse"
AUTOPICKUP_EXCEPTION="<floating eye corpse"
AUTOPICKUP_EXCEPTION="<wraith corpse"
# Don't pick these:
AUTOPICKUP_EXCEPTION=">corpse"
AUTOPICKUP_EXCEPTION=">worthless piece of"
AUTOPICKUP_EXCEPTION=">load stone"
AUTOPICKUP_EXCEPTION=">flint stone" 
